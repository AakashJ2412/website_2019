    "devDependencies": {
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^6.1.0",
        "gulp-clean-css": "^4.2.0",
        "gulp-htmlmin": "^5.0.1",
        "gulp-remove-empty-lines": "^0.1.0",
        "gulp-uglify": "^3.0.2",
        "husky": "^2.3.0",
        "prettier": "1.17.1",
        "pretty-quick": "^1.10.0"
